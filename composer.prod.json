{
  "name": "backfront/wp_theme_skeleton",
  "description": "Base theme to init your modular project in wordpress using the Umbrella package",
  "homepage": "http://alvesdouglas.com.br/",
  "keywords": [
    "umbrella",
    "backfront",
    "skelleton",
    "wordpress",
    "theme",
    "custom"
  ],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Douglas Alves",
      "email": "alves.douglaz@gmail.com",
      "homepage": "http://alvesdouglas.com.br/",
      "role": "Developer"
    }
  ],
  "require": {
    "twig/twig": "^1.24",
    "backfront/umbrella": "dev-feature/wordpress",
    "jonsa/pimple-ioc": "^1.3",
    "drewjbartlett/wordpress-eloquent": "^0.2.1",
    "backfront/bf_wp_toolkit": "*",
    "php": ">=7.0.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^4.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "installer-paths" : {
    "\\plugins\\bf_wp_toolkit" : ["backfront/bf_wp_toolkit"]
  }
}
